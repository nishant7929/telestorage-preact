.root
  position: absolute
  z-index: 15
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  background-color: var(--color-black)
  overflow: hidden

  > img
  > video
  > audio
    max-width: 100%
    max-height: 100%
    -webkit-touch-callout: default

  > video
    width: 100%
    height: auto

  > audio
    display: block
    width: 100%

  > img
    display: block
    width: auto
    height: auto

  > iframe
    width: 100%
    height: 80%

.header
  position: absolute
  top: 0
  right: 0
  left: 0
  z-index: 1
  display: flex
  align-items: center
  width: 100%
  height: 48px
  padding-left: 20px
  background-color: var(--color-black-05)
  color: var(--color-white)
  font-size: 14px

.button
  margin-left: auto
  width: 48px
  height: 48px
  background-color: transparent

  > svg
    fill: var(--color-white)
