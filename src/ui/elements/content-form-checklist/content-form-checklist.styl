.input
  flex-grow: 1

  > input
    height: 44px
    width: 100%
    padding: 0

  &._border
    border-bottom: 1px solid var(--form-item-border-color)

.items
  margin-right: -34px
  max-height: 320px
  padding-right: 34px

  overflow-y: scroll
  overflow-y: overlay
  -webkit-overflow-scrolling: touch
  scroll-behavior: smooth
  scrollbar-width: thin
  scrollbar-color: var(--scrollbar-inverted-color) var(--scrollbar-inverted-background-color)

  &::-webkit-scrollbar
    position: absolute
    background-color: var(--scrollbar-inverted-background-color)
    width: 4px

  &::-webkit-scrollbar-track
    background-color: var(--scrollbar-inverted-background-color)

  &::-webkit-scrollbar-thumb
    background-color: var(--scrollbar-inverted-color)
    border-radius: 4px

  &::-webkit-scrollbar-button
    display: none

.button
  width: 40px
  height: 48px
  flex-shrink: 0
  align-self: flex-end

  > svg
    width: 20px
    height: 20px
    fill: var(--color-light-2)

  &._primary > svg
    fill: var(--color-brand)

  &._header
    position: absolute
    top: 0
    right: 0
    width: 42px
    height: 36px

  &._content
    height: 100%

  &._small
    > svg
      width: 18px
      height: 18px

.loader
  margin: 15px 8px
  flex-shrink: 0
  width: 18px
  height: 18px
  align-self: flex-end

.itemsCount
  position: absolute
  left: -16px
  bottom: 0
  display: flex
  align-items: flex-end
  height: 48px
  padding: 0 0 14px 16px
  color: var(--color-blue-1)
  line-height: 1
