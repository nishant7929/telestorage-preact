.root
  width: 100%
  transition: top 0.1s ease-out, opacity 0.4s ease-out

.content
  position: relative
  width: 100%
  padding: 16px 16px 0
  border-radius: 8px
  background-color: var(--content-item-background-color)
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.02)

.loader
  position: absolute
  top: 8px
  right: 8px
  width: 16px
  height: 16px

.menu
  top: 0
  right: 0
  width: 32px
  height: 32px
  border-radius: 0 8px 0 0
