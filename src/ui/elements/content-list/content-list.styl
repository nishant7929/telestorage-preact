.root
  width: 100%
  overflow-y: scroll
  overflow-y: overlay
  -webkit-overflow-scrolling: touch
  scroll-behavior: smooth
  scrollbar-width: thin
  scrollbar-color: var(--scrollbar-color) var(--scrollbar-background-color)

  --auto-grid-min-size: 12rem
  display: -ms-grid
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(var(--auto-grid-min-size), 1fr))
  gap: 22px
  padding: 0 15px 70px

  &::-webkit-scrollbar
    position: absolute
    background-color: var(--scrollbar-background-color)
    width: 4px

  &::-webkit-scrollbar-track
    background-color: var(--scrollbar-background-color)

  &::-webkit-scrollbar-thumb
    background-color: var(--scrollbar-color)
    border-radius: 4px

  &::-webkit-scrollbar-button
    display: none

  @media screen and (min-width: $sidebar-width + $content-width + 40px)
    &::-webkit-scrollbar
      width: 8px

    &::-webkit-scrollbar-thumb
      border-radius: 8px

._fullHeight
  height: calc(100% - 48px - env(safe-area-inset-bottom, 0) - env(safe-area-inset-top, 0))
