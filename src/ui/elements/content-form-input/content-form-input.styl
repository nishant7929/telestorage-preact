.textarea
  flex-grow: 1
  height: 48px
  max-height: 240px
  padding-right: 6px

  &._filled
    margin-right: -40px
    padding-bottom: 0

    > textarea
      padding-right: 40px

  &._hasAttachments
    padding-bottom: 13px

.formatting
  position: absolute
  z-index: 2
  left: 4px
  bottom: 0
  right: 0
  display: flex
  height: 0
  padding: 0
  background-color: var(--content-form-background-color)
  overflow: hidden
  transform: translateY(48px)
  transition: transform .2s ease-in-out
  user-select: none

  &._visible
    height: 48px
    padding: 8px 0
    transform: translateY(0)

.formattingButton
  position: relative
  width: 40px
  text-transform: uppercase
  font-size: 12px

  &::after
    position: absolute
    display: none
    width: 8px
    height: 1px
    background-color: var(--default-font-color)
    content: ''

  &._b
    font-weight: bold

  &._i
    font-style: italic

  &._u::after
    top: 70%
    display: block

  &._s::after
    top: 50%
    display: block
    width: 12px

  &._m
    font-family: monospace
    font-size: 15px

  &._link > svg
    margin-top: 2px
    transform: rotate(-45deg)
    width: 16px
    height: 16px

.linkWrapper
  display: flex
  width: 100%
  height: 100%

.linkInput
  flex-grow: 1

  > input
    height: 100%
    font-size: 12px

  > div
    cursor: pointer

    > svg
      width: 14px
      height: 14px

.linkButton
  width: 42px
  padding-left: 14px

  > svg
    margin-bottom: 2px
