.root
  position: relative
  margin-bottom: 16px
  display: flex
  width: 100%
  height: 72px
  flex-shrink: 0
  //border-bottom: 1px solid var(--item-border-color)
  //border-radius: 8px 0 0 8px
  background-color: inherit

.preview
  flex-shrink: 0
  position: relative
  width: 72px
  height: 100%
  border-radius: 8px
  overflow: hidden
  user-select: none

  > canvas
  > img
  > div
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    width: 72px
    height: 72px
    border-radius: 8px

  > img
    display: block
    object-fit: cover

.description
  display: flex
  flex-direction: column
  justify-content: space-around
  width: calc(100% - 72px)
  padding-left: 16px
  font-weight: var(--font-weight-content)
  user-select: none

.title
  width: calc(100% - 32px)
  user-select: none

.footer
  display: flex
  width: calc(100% - 4px)
  user-select: none

  > span
    font-size: 12px

    &:last-child:not(:first-child)
      margin-left: auto
      color: var(--default-font-color)

.loader
  position: absolute
  top: 8px
  right: 0
  width: 16px
  height: 16px

.menu
  top: 0
  right: -8px
  width: 32px
  height: 32px
  border-radius: 0 8px 0 0

.cancelButton
  position: absolute
  top: 0
  right: -8px
  width: 32px
  height: 32px
  border-radius: 0 8px 0 0

._image
._video
._audio
  .preview
    cursor: pointer

._single
  margin-bottom: 0
