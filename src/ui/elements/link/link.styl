.root
  display: flex
  justify-content: center
  align-items: center
  flex-shrink: 0
  width: 100%
  height: 44px
  margin: 0
  padding: 0
  border: none
  box-shadow: none
  border-radius: 8px
  color: var(--default-font-color)
  background-color: inherit
  font-family: inherit
  font-weight: normal
  font-size: 16px
  line-height: 1
  cursor: pointer
  user-select: none
  transition: .2s ease-in-out
  transition-property: background, opacity
  text-decoration: none

  > svg
    flex-shrink: 0
    width: 18px
    height: 18px
    fill: var(--default-font-color)
    transition: fill .2s ease-in-out

  &:focus
    outline: none

  &:active
    opacity: .5

&._disabled
  opacity: .5
  cursor: not-allowed

&._uppercase
  text-transform: uppercase
  font-size: 14px
  font-weight: 500
  letter-spacing: 1px

&._round
  width: 36px
  height: 36px
  border-radius: 50%

&._square
  width: auto
  padding: 0 18px
  height: 100%
  border-radius: 0

&._outline
  border: 1px solid var(--default-font-color)

&._inline
  width: auto
  height: auto
  color: var(--color-light-2)

&._brand
  color: var(--color-white)
  background-color: var(--color-brand)

  &:active
    opacity: .75

  &._outline
    color: var(--color-brand)
    border: 1px solid var(--color-brand)
    background-color: inherit

&._light
  color: var(--color-white)
  background-color: var(--color-blue-1)

  &:active
    opacity: .75

&._error
  color: var(--color-red)

  &:active
    opacity: .75

  &._outline
    border: 1px solid var(--color-red)

&._alarm
  background-color: var(--color-red)
  color: var(--color-white)

  &._outline
    border: 1px solid var(--color-red)

:global(.fullscreen)
  .root > svg
    fill: var(--color-white)
