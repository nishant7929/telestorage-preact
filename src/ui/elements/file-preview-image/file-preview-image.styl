.root
  width: 100%
  height: 100%
  opacity: 0
  transition: opacity .2s ease-in
  will-change: opacity

  &._visible
    opacity: 1
    will-change: unset

  &._hidden
    display: none

.icon
  position: absolute
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  background-color: var(--color-black-01)

  > svg
    fill: var(--color-white)

  &._transform
    > svg
      width: 24px
      height: 24px
      transform: rotate(-45deg)
