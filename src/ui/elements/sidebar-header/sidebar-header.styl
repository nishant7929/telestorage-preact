.root
  position: relative
  z-index: 6
  display: flex
  align-items: center
  flex-shrink: 0
  height: calc(48px + env(safe-area-inset-top, 0))
  padding: env(safe-area-inset-top, 0) calc(env(safe-area-inset-right, 0) + 20px) 0 calc(9px + env(safe-area-inset-left, 0))
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.12)
  background-color: var(--sidebar-header-background-color)

  &::before
    position: absolute
    z-index 0
    top: calc(16px + env(safe-area-inset-top, 0))
    right: 12px
    display: block
    width: 64px
    height: 64px
    border-radius: 50%
    background-color: var(--sidebar-background-color)
    box-shadow: inset 0 0 2px 1px rgba(0, 0, 0, 0.12)
    content: ''

  &::after
    position: absolute
    z-index 0
    top: calc(49px + env(safe-area-inset-top, 0))
    right: 12px
    width: 64px
    height: 32px
    background-color: var(--sidebar-background-color)
    content: ''

  > button
    position: relative
    width: 40px

    &:last-child
      margin-left: 16px

  @media $desktop
    position: sticky
    position: -webkit-sticky
    top: 0

    &::after
      border-radius: 0 0 64px 64px
