.root
  position: relative
  width: 100%
  color: var(--color-light-2)
  background-color: inherit

.input
  display: block
  width: 100%
  height: 44px
  padding: 0 12px
  border: none
  background-color: inherit
  box-shadow: none
  font-family: var(--font-family-content)
  font-weight: var(--font-weight-content)
  font-size: 16px
  letter-spacing: .2px
  color: var(--default-font-color)
  appearance: none
  outline: none

  &:focus
    outline: none

  &::placeholder
    font-family: var(--font-family-ui)

  &:-webkit-autofill
  &:-internal-autofill-previewed
  &:-internal-autofill-selected
    background-color: var(--color-dark-2) !important
    box-shadow: 0 0 0 1000px var(--color-dark-2) inset !important

  &._border
    border: 1px solid var(--color-light-2)
    border-radius: 8px
    transition: border-color .2s ease-in

  &._icon
    padding-right: 40px

.icon
  position: absolute
  top: 0
  right: 0
  bottom: 0
  display: flex
  justify-content: center
  align-items: center
  width: 40px

  > svg
    width: 16px
    height: 16px
    fill: var(--color-light-2)

.label
  position: absolute
  z-index: 1
  top: -7px
  left: 8px
  max-width: calc(100% - 16px)
  height: 14px
  padding: 0 4px
  overflow: hidden
  color: inherit
  background-color: inherit
  font-size: 12px
  line-height: 1
  transition: color .2s ease-in
  text-overflow: ellipsis
  white-space: nowrap

&._brand
  .input._border
    border-color: var(--color-brand)

  .label
    color: var(--color-brand)

&._disabled
  opacity: 0.5
  cursor: not-allowed

&._error
  .input._border
    border-color: var(--color-red)

  .label
    color: var(--color-red)
