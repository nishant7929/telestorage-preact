.root
  position: absolute
  z-index: 6
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  background-color: var(--sidebar-background-color)

.header
  position: relative
  z-index: 1
  display: flex
  align-items: center
  flex-shrink: 0
  padding: 0 20px 0 env(safe-area-inset-left, 0)
  height: 48px
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.12)
  background-color: var(--sidebar-header-background-color)

.title
  display: block
  margin: 0
  padding: 0
  font-size: 17px
  font-weight: normal
  line-height: 1

.content
  position: relative
  flex-grow: 1
  background-color: inherit
  padding: 0 0 40px env(safe-area-inset-left, 0)

  overflow: auto
  -webkit-overflow-scrolling: touch
  scroll-behavior: smooth
  scrollbar-width: none
  &::-webkit-scrollbar
    display: none

  &._paddings
    padding: 0 20px 40px calc(20px + env(safe-area-inset-left, 0))

  &._disabled
    &::after
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      display: block
      //background-color: inherit
      //opacity: 0.5
      content: ''

.loader
  margin-left: auto
  width: 16px
  height: 16px
