.root
  padding: 13px 0

.textarea
  display: block
  width: 100%
  height: 100%
  min-height: 22px
  margin: 0
  padding: 0
  border: none
  background-color: inherit
  color: var(--default-font-color)
  box-shadow: none
  font-family: var(--font-family-content)
  font-weight: var(--font-weight-content)
  font-size: 16px
  line-height: 22px
  letter-spacing: .2px
  appearance: none
  outline: none
  resize: none

  overflow-y: scroll
  overflow-y: overlay
  -webkit-overflow-scrolling: touch
  scroll-behavior: smooth
  scrollbar-width: thin
  scrollbar-color: var(--scrollbar-inverted-color) var(--scrollbar-inverted-background-color)

  &::-webkit-scrollbar
    position: absolute
    background-color: var(--scrollbar-inverted-background-color)
    width: 4px

  &::-webkit-scrollbar-track
    background-color: var(--scrollbar-inverted-background-color)

  &::-webkit-scrollbar-thumb
    background-color: var(--scrollbar-inverted-color)
    border-radius: 4px

  &::-webkit-scrollbar-button
    display: none

  &::placeholder
    font-family: var(--font-family-ui)
