.root
  display: flex
  width: 100%
  height: 80px
  padding-bottom: 16px

  &:last-child
    height: 64px
    padding-bottom: 0

.preview
  margin-right: 16px
  flex-shrink: 0
  align-self: center
  width: 64px
  height: 100%

  > img
    display: block
    width: 100%
    height: 100%
    border-radius: 8px
    object-fit: cover

.previewLoader
  display: flex
  justify-content: center
  align-items: center
  flex-shrink: 0
  width: 100%
  height: 100%
  border-radius: 8px
  background-color: var(--color-blue-1)

.content
  display: flex
  flex-grow: 1
  flex-direction: column
  justify-content: space-around
  width: calc(100% - 120px)

.progress
  font-size: 12px

  &._active
    color: var(--default-font-color)

.button
  width: 40px
  height: 100%
  flex-shrink: 0
  align-self: flex-end

  > svg
    width: 18px
    height: 18px
    fill: var(--color-light-2)
